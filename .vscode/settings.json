{
    "workbench.colorCustomizations": {
        "activityBar.activeBorder": "#606020"
    },
    "files.exclude": {
        "**/.mock": false,
        "Rscripts/designer_aky.xlsb": true,
        "Rscripts/designer_prev.xlsb": true
    },
    "editor.lineNumbers": "on",
    "editor.fontSize": 16,
    "editor.fontFamily": "'Office Code Pro',  Menlo, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "zenMode.hideStatusBar": false,
    "editor.minimap.scale": 2,
    "editor.minimap.renderCharacters": true,
    "githubPullRequests.ignoredPullRequestBranches": [
        "dev"
    ],
    "spellright.language": [
        "en"
    ],
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext"
    ],
    "spellright.parserByClass": {
        "vba": {
            "parser": "plain"
        }
    },
    "r.lsp.promptToInstall": false,
    "editor.rulers": [80, 120, 160],
    "editor.inlineSuggest.enabled": false,
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.fontFamily": "'Office Code Pro',  Menlo, 'Courier New', monospace"

}